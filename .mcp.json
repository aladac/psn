{
  "env": {
    "PATH": "/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin"
  },
  "mcpServers": {
    "docker-local": {
      "command": "uv",
      "args": ["run", "psn", "mcp", "docker-local"]
    },
    "docker-remote": {
      "command": "uv",
      "args": ["run", "psn", "mcp", "docker-remote"],
      "env": {
        "JUNKPILE_HOST": "junkpile",
        "SSH_KEY": "/Users/chi/.ssh/id_ed25519"
      }
    },
    "ollama": {
      "command": "uv",
      "args": ["run", "psn", "mcp", "ollama"],
      "env": {
        "JUNKPILE_HOST": "junkpile",
        "SSH_KEY": "/Users/chi/.ssh/id_ed25519"
      }
    },
    "postgres": {
      "command": "uv",
      "args": ["run", "psn", "mcp", "postgres"],
      "env": {
        "JUNKPILE_HOST": "junkpile",
        "SSH_KEY": "/Users/chi/.ssh/id_ed25519",
        "PG_DATABASE": "personality"
      }
    },
    "sqlite": {
      "command": "uv",
      "args": ["run", "psn", "mcp", "sqlite"]
    },
    "memory": {
      "command": "uv",
      "args": ["run", "psn", "mcp", "memory"],
      "env": {
        "EMBEDDING_MODEL": "nomic-embed-text"
      }
    },
    "indexer": {
      "command": "uv",
      "args": ["run", "psn", "mcp", "indexer"],
      "env": {
        "EMBEDDING_MODEL": "nomic-embed-text"
      }
    },
    "tts": {
      "command": "uv",
      "args": ["run", "psn", "mcp", "tts"]
    }
  }
}
