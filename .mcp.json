{
  "mcpServers": {
    "docker-local": {
      "command": "uvx",
      "args": ["psn", "mcp", "docker-local"]
    },
    "docker-remote": {
      "command": "uvx",
      "args": ["psn", "mcp", "docker-remote"],
      "env": {
        "JUNKPILE_HOST": "junkpile",
        "SSH_KEY": "/Users/chi/.ssh/id_ed25519"
      }
    },
    "ollama": {
      "command": "uvx",
      "args": ["psn", "mcp", "ollama"],
      "env": {
        "JUNKPILE_HOST": "junkpile",
        "SSH_KEY": "/Users/chi/.ssh/id_ed25519"
      }
    },
    "postgres": {
      "command": "uvx",
      "args": ["psn", "mcp", "postgres"],
      "env": {
        "JUNKPILE_HOST": "junkpile",
        "SSH_KEY": "/Users/chi/.ssh/id_ed25519",
        "PG_DATABASE": "personality"
      }
    },
    "sqlite": {
      "command": "uvx",
      "args": ["psn", "mcp", "sqlite"]
    },
    "memory": {
      "command": "uvx",
      "args": ["psn", "mcp", "memory"],
      "env": {
        "EMBEDDING_MODEL": "nomic-embed-text"
      }
    },
    "indexer": {
      "command": "uvx",
      "args": ["psn", "mcp", "indexer"],
      "env": {
        "EMBEDDING_MODEL": "nomic-embed-text"
      }
    },
    "tts": {
      "command": "uvx",
      "args": ["psn", "mcp", "tts"]
    }
  }
}
