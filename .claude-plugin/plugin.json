{
  "name": "psn",
  "version": "0.2.0+d57bd7c",
  "description": "Persona system for Claude Code - cartridges, MCP server, memory, and TTS",
  "author": {
    "name": "chi",
    "email": "chi@tengu.host"
  },
  "keywords": [
    "persona",
    "cartridge",
    "memory",
    "tts",
    "mcp",
    "knowledge-graph"
  ],
  "mcpServers": {
    "psn": {
      "command": "psn",
      "args": ["mcp", "serve"],
      "env": {
        "PATH": "/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin"
      },
      "description": "Persona MCP server - identity, memories, knowledge, user, host, and project resources"
    }
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": {
          "tool_name": "Read"
        },
        "command": "psn hooks post-tool-use track-read"
      }
    ],
    "PreToolUse": [
      {
        "matcher": {
          "tool_name": "Write"
        },
        "command": "psn hooks pre-tool-use require-read"
      },
      {
        "matcher": {
          "tool_name": "Edit"
        },
        "command": "psn hooks pre-tool-use require-read"
      }
    ]
  }
}
