{
  "name": "psn",
  "version": "0.2.0+df83a79",
  "description": "Persona system for Claude Code - cartridges, MCP server, memory, and TTS",
  "author": {
    "name": "chi",
    "email": "chi@tengu.host"
  },
  "keywords": [
    "persona",
    "cartridge",
    "memory",
    "tts",
    "mcp",
    "knowledge-graph"
  ],
  "mcpServers": {
    "docker-local": {
      "command": "psn",
      "args": ["mcp", "docker-local"],
      "description": "Local Docker management"
    },
    "docker-remote": {
      "command": "psn",
      "args": ["mcp", "docker-remote"],
      "description": "Remote Docker management via SSH"
    },
    "ollama": {
      "command": "psn",
      "args": ["mcp", "ollama"],
      "description": "Ollama model management"
    },
    "postgres": {
      "command": "psn",
      "args": ["mcp", "postgres"],
      "description": "PostgreSQL database access"
    },
    "sqlite": {
      "command": "psn",
      "args": ["mcp", "sqlite"],
      "description": "SQLite database access"
    },
    "memory": {
      "command": "psn",
      "args": ["mcp", "memory"],
      "description": "Semantic memory with vector embeddings"
    },
    "indexer": {
      "command": "psn",
      "args": ["mcp", "indexer"],
      "description": "Code and documentation indexer"
    },
    "tts": {
      "command": "psn",
      "args": ["mcp", "tts"],
      "description": "Text-to-speech via Piper"
    }
  }
}
